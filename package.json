{
  "name": "@mapbox/cloudformation-step-function-buddy",
  "version": "1.0.0",
  "description": "Write your Step Function definition in JavaScript (instead of JSON) and validate it",
  "main": "index.js",
  "engines": {
    "node": ">=6.0.0"
  },
  "directories": {
    "lib": "lib"
  },
  "dependencies": {
    "asl-validator": "^1.0.8"
  },
  "devDependencies": {
    "@mapbox/cloudfriend": "^1.9.0",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-node": "^6.0.1",
    "prettier": "^1.12.0",
    "tap": "^11.1.3"
  },
  "prettier": {
    "singleQuote": true
  },
  "scripts": {
    "preformat": "npm run lint",
    "format": "prettier --single-quote --write \"{*,**/*}.{js,json}\"",
    "lint": "eslint .",
    "pretest": "npm run format",
    "test": "tap --cov test/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mapbox/cloudformation-step-function-buddy.git"
  },
  "keywords": [
    "aws",
    "step-function",
    "cloudformation"
  ],
  "author": "Mapbox",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/mapbox/cloudformation-step-function-buddy/issues"
  },
  "homepage": "https://github.com/mapbox/cloudformation-step-function-buddy#readme"
}
